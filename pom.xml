<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <!-- ==================== 顶层设计 =========================== -->
    <modelVersion>4.0.0</modelVersion>

    <!-- ==================== 项目设置 =========================== -->
    <groupId>org.mymmsc</groupId>
    <artifactId>hotwheel-framework</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0</version>

    <!-- ==================== 子模块设置 =========================== -->
    <modules>
        <module>hotwheel-core</module>
        <module>hotwheel-j2ee</module>
        <module>hotwheel-test</module>
    </modules>

    <!-- ==================== 依赖jar版本 设置 =========================== -->
    <properties>
        <!-- MyMMSC组件 版本设置 -->
        <mymmsc.version>1.0.0</mymmsc.version>

        <!-- J2EE 版本 -->
        <javax.servlet-api.version>3.0.1</javax.servlet-api.version>
        <guava.version>16.0</guava.version>

        <!-- logging start -->
        <slf4j.version>1.7.21</slf4j.version>
        <log4j2.version>2.6.2</log4j2.version>
        <logback.version>1.0.13</logback.version>
        <!-- logging end -->
        <jedis.version>2.9.0</jedis.version>

        <!-- jdbc start -->
        <druid.version>1.0.23</druid.version>
        <mysql_connector.version>5.1.39</mysql_connector.version>
        <!-- jdbc end -->

        <!-- json start -->
        <jackson.version>1.9.12</jackson.version>
        <jackson.databind.version>2.7.0</jackson.databind.version>
        <!-- json end -->

        <!-- spring start -->
        <springframework.version>4.0.4.RELEASE</springframework.version>
        <mybatis.version>3.4.1</mybatis.version>
        <mybatis.spring.version>1.3.0</mybatis.spring.version>
        <cglib.version>3.2.4</cglib.version>
        <asm.version>5.1</asm.version>
        <aspectj.version>1.6.12</aspectj.version>

        <spring-data-redis.version>1.5.0.RELEASE</spring-data-redis.version>
        <!-- spring end -->

        <!-- CACHE 版本 -->
        <ehcache.version>3.1.1</ehcache.version>
    </properties>

    <!-- ==================== 依赖jar 设置 =========================== -->
    <dependencies>
        <!--
        <dependency>
            <groupId>org.mymmsc</groupId>
            <artifactId>mymmsc-api</artifactId>
            <version>${mymmsc.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mymmsc</groupId>
            <artifactId>mymmsc-j2ee</artifactId>
            <version>${mymmsc.version}</version>
        </dependency>
        -->
    </dependencies>

    <!-- ==================== 编译设置 =========================== -->
    <build>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.tpl</include>
                    <include>**/*.txt</include>
                </includes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.0.1</version>
                <configuration>
                    <attach>true</attach>
                </configuration>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <!-- ==================== Nexus私服设置 =========================== -->
    <repositories>
        <repository>
            <id>nexus-releases</id>
            <name>Local Nexus Repository</name>
            <url>http://100.73.17.2:8081/repository/public/</url>
        </repository>
    </repositories>
    <!-- ==================== 发布 =========================== -->
    <distributionManagement>
        <repository>
            <id>nexus-releases</id>
            <name>Local Nexus Repository</name>
            <url>http://100.73.17.2:8081/repository/public/</url>
        </repository>
    </distributionManagement>
</project>