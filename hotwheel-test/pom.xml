<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <!-- ==================== 顶层设计 =========================== -->
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.mymmsc.hotwheel</groupId>
        <artifactId>hotwheel-framework</artifactId>
        <version>2.0.8</version>
    </parent>

    <!-- ==================== 项目设置 =========================== -->
    <groupId>org.mymmsc.hotwheel</groupId>
    <artifactId>hotwheel-test</artifactId>
    <version>${hotwheel.version}</version>
    <packaging>jar</packaging>

    <!-- ==================== 依赖jar 设置 =========================== -->
    <dependencies>
        <dependency>
            <groupId>org.mymmsc.hotwheel</groupId>
            <artifactId>hotwheel-core</artifactId>
            <version>${hotwheel.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mymmsc.hotwheel</groupId>
            <artifactId>hotwheel-mybatis</artifactId>
            <version>${hotwheel.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mymmsc.hotwheel</groupId>
            <artifactId>hotwheel-jdbc</artifactId>
            <version>${hotwheel.version}</version>
        </dependency>
        <!-- cglib start -->
        <dependency>
            <groupId>cglib</groupId>
            <artifactId>cglib-nodep</artifactId>
            <version>${cglib.version}</version>
        </dependency>
        <!-- cglib end -->
        <dependency>
            <groupId>mysql</groupId>
            <artifactId>mysql-connector-java</artifactId>
            <version>${mysql_connector.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-slf4j-impl</artifactId>
            <version>${log4j2.version}</version>
        </dependency>
    </dependencies>

    <!-- ==================== 多环境 设置 =========================== -->
    <profiles>
        <!-- local start -->
        <profile>
            <id>local</id>
            <properties>
                <dsmp.env>local</dsmp.env>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <!-- local end -->
        <!-- dev start -->
        <profile>
            <id>dev</id>
            <properties>
                <dsmp.env>dev</dsmp.env>
            </properties>

        </profile>
        <!-- dev end -->
        <!-- test start -->
        <profile>
            <id>test</id>
            <properties>
                <dsmp.env>test</dsmp.env>
            </properties>

        </profile>
        <!-- test end -->
        <!-- bate start -->
        <profile>
            <id>beta</id>
            <properties>
                <dsmp.env>beta</dsmp.env>
            </properties>
        </profile>
        <!-- beta start -->
        <!-- prod start -->
        <profile>
            <id>prod</id>
            <properties>
                <dsmp.env>prod</dsmp.env>
            </properties>
        </profile>
        <!-- prod end -->
    </profiles>
</project>