<?xml version="1.0" encoding="UTF-8"?>
<!-- status=debug 可以查看log4j的装配过程 -->
<Configuration status="off" monitorInterval="60">
    <Properties>
        <!-- 配置日志文件输出目录 -->
        <Property name="logs.home">/data/runtime/logs</Property>
        <Property name="logs.project">api</Property>
        <Property name="module.mybatis">mybatis</Property>
        <Property name="module.spring">spring</Property>
    </Properties>

    <Appenders>
        <!-- 设置日志格式并配置日志压缩格式(runtime.log.年份.gz) -->
        <RollingRandomAccessFile name="runtime"
                                 immediateFlush="false" fileName="${logs.home}/${logs.project}/runtime.log"
                                 filePattern="${logs.home}/${logs.project}/runtime.log.%d{yyyy-MM-dd}.gz">
            <Filters>
                <!-- Now deny warn, error and fatal messages -->
                <ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="fatal" onMatch="DENY" onMismatch="NEUTRAL"/>
                <!-- This filter accepts info, warn, error, fatal and denies debug/trace -->
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <!--
                %d{yyyy-MM-dd HH:mm:ss, SSS} : 日志生产时间
                %p : 日志输出格式
                %c : logger的名称
                %m : 日志内容，即 logger.info("message")
                %n : 换行符
                %C : Java类名
                %L : 日志输出所在行数
                %M : 日志输出所在方法名
                hostName : 本地机器名
                hostAddress : 本地ip地址
            -->
            <PatternLayout>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%X{jdb-header-rid}] (%F.%M:%L) %m %n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>

        <!-- ERROR日志格式 -->
        <RollingRandomAccessFile name="error"
                                 immediateFlush="false" fileName="${logs.home}/${logs.project}/error.log"
                                 filePattern="${logs.home}/${logs.project}/error.log.%d{yyyy-MM-dd}.gz">
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT"/>
            </Filters>
            <PatternLayout>
                <pattern>[%p][%d{yyyy-MM-dd HH:mm:ss.SSS}] [%X{jdb-header-rid}] %l %msg%xEx %n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>

        <!-- DEBUG日志格式 -->
        <RollingRandomAccessFile name="debug"
                                 immediateFlush="false" fileName="${logs.home}/${logs.project}/debug.log"
                                 filePattern="${logs.home}/${logs.project}/debug.log.%d{yyyy-MM-dd}.gz">
            <Filters>
                <ThresholdFilter level="info" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout>
                <pattern>[%p][%d{yyyy-MM-dd HH:mm:ss.SSS}] [%X{jdb-header-rid}] %l %msg%xEx%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>

        <!-- mybatis日志 -->
        <RollingRandomAccessFile name="${module.mybatis}"
                                 immediateFlush="false" fileName="${logs.home}/${logs.project}/${module.mybatis}.log"
                                 filePattern="${logs.home}/${logs.project}/${module.mybatis}.log.%d{yyyy-MM-dd}.gz">
            <PatternLayout>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%X{jdb-header-rid}] (%F.%M:%L) %m %n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>

        <!-- springmvc日志 -->
        <RollingRandomAccessFile name="${module.spring}"
                                 immediateFlush="false" fileName="${logs.home}/${logs.project}/${module.spring}.log"
                                 filePattern="${logs.home}/${logs.project}/${module.spring}.log.%d{yyyy-MM-dd}.gz">
            <PatternLayout>
                <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%X{jdb-header-rid}] (%F.%M:%L) %m %n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <AsyncLogger name="org.mybatis.spring" level="debug" additivity="false" includeLocation="true">
            <appender-ref ref="${module.mybatis}"/>
        </AsyncLogger>
        <AsyncLogger name="org.apache.ibatis" level="debug" additivity="false" includeLocation="true">
            <appender-ref ref="${module.mybatis}"/>
        </AsyncLogger>

        <AsyncLogger name="org.springframework" level="debug" additivity="false" includeLocation="true">
            <appender-ref ref="${module.spring}"/>
        </AsyncLogger>

        <!-- 配置日志的根节点 -->
        <asyncRoot level="debug" includeLocation="true">
            <AppenderRef ref="runtime"/>
            <AppenderRef ref="error"/>
            <AppenderRef ref="debug"/>
        </asyncRoot>
    </Loggers>
</Configuration>